{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES2016",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
